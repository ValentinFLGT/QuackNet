{% extends 'base.html.twig' %}

{% block title %}Edit Duck{% endblock %}

{% block body %}
    <h1>Edit Duck Profile</h1>
    {% if duck.fileName %}
        <img src="/uploads/images/ducks/{{ duck.fileName }}" class="rounded-circle mr-3"
             height="100px" width="100px" alt="avatar">
    {% else %}
        <img src="{{ asset('uploads/defaultDuck.png') }}" class="rounded-circle mr-3"
             height="100px" width="100px" alt="avatar">
    {% endif %}

    {{ include('duck/_form.html.twig', {'button_label': 'Update'}) }}

    <div class="row">
        <a href="{{ path('duck_show', {'id': duck.id }) }}" class="col-2">
            <button class="btn btn-outline-warning">Back to Profile</button>
        </a>
        {{ include('duck/_delete_form.html.twig') }}
    </div>
{% endblock %}
