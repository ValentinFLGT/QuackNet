{% block body %}
    <nav class="navbar navbar-expand-lg custom-navbar">
        <a href="/quack"><img class="navbar-brand" src="{{ asset('assets/quack-logo.png') }}" alt="logo"
                              style="width: 35px; height:35px"/></a>
        <button class="navbar-toggler quack-color" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse custom-navbar" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link quack-color" href="/duck/{{ app.user.id }}">Mon Profil</a>
                    </li>
                    <li>
                        <a class="nav-link quack-color" href="/logout">Logout</a>
                    </li>
                {% else %}
                    <li>
                        <a class="nav-link quack-color" href="/login">Login</a>
                    </li>
                    <li>
                        <a class="nav-link quack-color" href="/register">Register</a>
                    </li>
                {% endif %}
            </ul>
            {% if app.user %}
            <p class="welcome-message">Welcome {{ app.user.duckName }}</p>
            {% endif %}
            <form class="form-inline my-2 my-lg-0 custom-navbar">
                <input class="form-control mr-sm-2 quack-color" type="search" placeholder="Search" aria-label="Search">
                <button class="btn my-2 my-sm-0 quack-color" type="submit">Search</button>
            </form>
        </div>
    </nav>
{% endblock %}