{{ form_start(form) }}
<div class="row">
    <audio id="audio" src="{{ asset('dry-fart.mp3') }}"></audio>
    <div class="new-quack-container" onclick="play()">
        {{ form_row(form.content, {
            label: false
        }) }}
        <div class="new-quack-btn-container p6px">
            {{ form_row(form.image, {
                label: false
            }) }}
            <button class="btn btn-outline-success" style="height: 39px">{{ button_label|default('Publish') }}</button>
        </div>
    </div>
</div>
{{ form_end(form) }}

<script>
    function play() {
        let audio = document.getElementById("audio");
        audio.play();
    }
</script>
